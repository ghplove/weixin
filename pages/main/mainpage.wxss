  flex-direction: column;
  margin-top: 30px;
  align-items: center;
}

.title_style {
  width: max-content;
  text-align: center;
  color: #000;
}

.money_view_style {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 30px;
  align-items: center;
}

.moneystr_style {
  color: #000;
  font-size: 12px;
}
.money_style {
  position: relative;
  font-size: 16px;
  color: #000;
  lighting-color: #bebebe;
  width: 80px;
